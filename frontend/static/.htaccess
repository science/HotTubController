# Hot Tub Controller Frontend - Apache/LiteSpeed URL Rewriting
# Handles SPA routing and API proxy

RewriteEngine On

# Proxy /api/* requests to backend
RewriteRule ^api/(.*)$ backend/public/api/$1 [L]

# If the request is for a real file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route all other requests to index.html (SPA routing)
RewriteRule ^ index.html [L]
