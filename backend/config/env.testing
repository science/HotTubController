# Testing Environment Configuration
# Used automatically by PHPUnit tests

APP_ENV=testing

# External API Mode - Controls ALL external service calls
# stub = simulated calls (required for unit tests)
# live = real API calls (only for @group live tests)
EXTERNAL_API_MODE=stub

# IFTTT Configuration
# No API key needed for stub mode
# IFTTT_WEBHOOK_KEY=

# Authentication - Bootstrap Admin User
AUTH_ADMIN_USERNAME=admin
AUTH_ADMIN_PASSWORD=password
JWT_SECRET=test-secret-for-phpunit-only
JWT_EXPIRY_HOURS=24

# ESP32 Temperature Sensor
ESP32_API_KEY=test-esp32-api-key

# Optional Features
# Enable blinds for testing
BLINDS_FEATURE_ENABLED=true
