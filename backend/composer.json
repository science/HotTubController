{
    "name": "hot-tub-controller/proxy",
    "description": "Hot Tub Controller PHP CORS Proxy API",
    "type": "project",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.13",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.5",
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "guzzlehttp/guzzle": "^7.8",
        "mockery/mockery": "^1.6",
        "php-vcr/php-vcr": "^1.8",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.8",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "HotTubController\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HotTubController\\Tests\\": "tests/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=unit",
        "test-integration": "phpunit --testsuite=integration",
        "coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyse src tests --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12",
        "serve": "php -S localhost:8080 -t public",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
