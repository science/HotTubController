/vendor/
/composer.phar
/.phpunit.cache/
/logs/*.log
/storage/logs/

# Environment files with secrets - NEVER commit these
.env
.env.*
!.env.example

# WirelessTag state cache - runtime data
/storage/temperature_state.json

# Config files that may contain real keys or local overrides
config/env.dev
config/env.staging
config/env.production

# User database - contains hashed passwords, should never be committed
/storage/users/

# Runtime backup data - generated by CrontabBackupService
/storage/crontab-backups/

# Scheduled job files - runtime data managed by SchedulerService
/storage/scheduled-jobs/

# Equipment state files - runtime data managed by EquipmentStatusService
/storage/state/*
!/storage/state/.gitkeep

# Firmware directory - tracked in git for deployment
# (binaries are small ~1MB and benefit from version control)
!/storage/firmware/
